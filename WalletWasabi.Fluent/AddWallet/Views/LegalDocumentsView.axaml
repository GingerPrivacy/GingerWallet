<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:WalletWasabi.Fluent.AddWallet.ViewModels"
             mc:Ignorable="d" d:DesignWidth="428" d:DesignHeight="371"
             x:CompileBindings="True"
             x:DataType="viewModels:LegalDocumentsViewModel"
             x:Class="WalletWasabi.Fluent.AddWallet.Views.LegalDocumentsView">
  <ContentArea Title="{Binding Title}"
                 Caption="Please read the small print."
                 EnableCancel="{Binding EnableCancel}"
                 EnableBack="{Binding EnableBack}"
                 FocusCancel="True"
                 IsBusy="{Binding IsBusy}">
    <TextBlock TextWrapping="Wrap" Classes="monoSpaced" Text="{Binding Content}" />
  </ContentArea>
</UserControl>
