<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:settings="clr-namespace:WalletWasabi.Fluent.SearchBar.ViewModels"
             mc:Ignorable="d"
             x:DataType="settings:RestartViewModel"
             x:CompileBindings="True"
             x:Class="WalletWasabi.Fluent.SearchBar.Views.RestartView">

  <DockPanel>
    <Button Classes="action" Margin="0 0 0 20" HorizontalAlignment="Center" DockPanel.Dock="Bottom" Command="{Binding RestartCommand}">
      <TextBlock>Restart now</TextBlock>
    </Button>
    <TextBlock Margin="20 15 20 15" TextAlignment="Center" TextWrapping="Wrap" Text="{Binding Message}" />
  </DockPanel>
</UserControl>
