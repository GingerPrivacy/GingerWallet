<Styles xmlns="https://github.com/avaloniaui">

  <Style Selector="ContextMenu MenuItem /template/ Viewbox#PART_IconPresenter">
    <Setter Property="(Interaction.Behaviors)">
      <BehaviorCollectionTemplate>
        <BehaviorCollection>
          <MenuItemIconSizeBehavior />
        </BehaviorCollection>
      </BehaviorCollectionTemplate>
    </Setter>
  </Style>

  <Style Selector="ContextMenu, FlyoutPresenter, MenuFlyoutPresenter">
    <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
    <Style.Animations>
      <Animation Duration="0:0:0.25" Easing="CubicEaseOut">
        <KeyFrame Cue="0%">
          <Setter Property="ScaleTransform.ScaleX" Value="0.8" />
          <Setter Property="ScaleTransform.ScaleY" Value="0.8" />
          <Setter Property="Opacity" Value="0" />
        </KeyFrame>
        <KeyFrame Cue="100%">
          <Setter Property="ScaleTransform.ScaleX" Value="1.0" />
          <Setter Property="ScaleTransform.ScaleY" Value="1.0" />
          <Setter Property="Opacity" Value="1" />
        </KeyFrame>
      </Animation>
    </Style.Animations>
  </Style>

</Styles>
