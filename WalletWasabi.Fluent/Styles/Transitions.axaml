<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:WalletWasabi.Fluent.Converters">

  <!-- Opacity -->
  <Style Selector=":is(Control).transitionO">
    <Setter Property="IsVisible"
            Value="{Binding $self.Opacity, Converter={x:Static converters:BoolOpacityConverters.OpacityToBool}}" />
    <Setter Property="Transitions">
      <Transitions>
        <DoubleTransition Property="Opacity" Duration="0:0:.5" Easing="{StaticResource FluentEasing}" />
      </Transitions>
    </Setter>
  </Style>
  <Style Selector=":is(Control).transitionO.hide">
    <Setter Property="Opacity" Value="0" />
  </Style>
  <Style Selector=":is(Control).transitionO.show">
    <Setter Property="Opacity" Value="1" />
  </Style>

  <!-- Opacity and Scale -->
  <Style Selector=":is(Control).transitionOS">
    <Setter Property="IsVisible"
            Value="{Binding $self.Opacity, Converter={x:Static converters:BoolOpacityConverters.OpacityToBool}}" />
    <Setter Property="Transitions">
      <Transitions>
        <TransformOperationsTransition Property="RenderTransform" Duration="0:0:.5"
                                       Easing="{StaticResource FluentEasing}" />
        <DoubleTransition Property="Opacity" Duration="0:0:.5" Easing="{StaticResource FluentEasing}" />
      </Transitions>
    </Setter>
  </Style>
  <Style Selector=":is(Control).transitionOS.hide">
    <Setter Property="Opacity" Value="0" />
    <Setter Property="RenderTransform" Value="scale(0.8,0.8)" />
  </Style>
  <Style Selector=":is(Control).transitionOS.show">
    <Setter Property="Opacity" Value="1" />
    <Setter Property="RenderTransform" Value="scale(1,1)" />
  </Style>

</Styles>
