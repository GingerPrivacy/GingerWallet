<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:settings="using:WalletWasabi.Fluent.ViewModels.Settings"
             xmlns:conv="using:WalletWasabi.Fluent.Converters"
             xmlns:basemodels="using:WalletWasabi.Models"
             xmlns:models="clr-namespace:WalletWasabi.Fluent.Models"
             x:Class="WalletWasabi.Fluent.Views.Settings.SecuritySettingsTabView"
             x:CompileBindings="True"
             x:DataType="settings:SecuritySettingsTabViewModel">
  <StackPanel Classes="settingsLayout">

    <DockPanel>
      <TextBlock Text="Two-factor authentication" />
      <ToggleSwitch IsChecked="{Binding Settings.TwoFactorEnabled, Mode=OneWay}" Command="{Binding GenerateTwoFactorCommand}" />
    </DockPanel>
  </StackPanel>
</UserControl>
