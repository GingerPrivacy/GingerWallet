<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dialog="using:WalletWasabi.Fluent.ViewModels.Dialogs"
             mc:Ignorable="d" d:DesignWidth="428" d:DesignHeight="371"
             x:DataType="dialog:VerifyTwoFactoryAuthenticationDialogViewModel"
             x:CompileBindings="True"
             x:Class="WalletWasabi.Fluent.Views.Dialogs.VerifyTwoFactoryAuthenticationDialogView">
  <ContentArea Title="{Binding Title}" IsBusy="{Binding IsBusy}"
                 ScrollViewer.VerticalScrollBarVisibility="Disabled" EnableNext="True" NextContent="Verify" EnableCancel="{Binding EnableCancel}"
                 EnableBack="False">
    <DockPanel>

      <TextBox DockPanel.Dock="Bottom" Text="{Binding TwoFactorToken}" />
      <Label DockPanel.Dock="Bottom">2FA authentication token</Label>
    </DockPanel>
  </ContentArea>
</UserControl>
